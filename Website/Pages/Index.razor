@page "/"
@inject NavigationManager navigationManager

<PageTitle>Index</PageTitle>

<div id="video-container">
    <video id="video-background" autoplay muted loop>
        <source src="/Videos/Opening.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div id="video-overlay">
        <p id="main-title">Taylored Toys</p>
        <p id="sub-title"> Build, Create, Play: Where Every Child is an Inventor</p>
        <a href="../build" class="apple-button">Start Creating</a>
    </div>
</div>


<div class="container mt-5">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/images/KidWithToys.jpg" alt="First slide">
                <div id="image-overlay">
                    <p id="main-title-c">Create</p>
                    <p id="sub-title-c"> Unleash Your Imagination, Craft Your World.</p>
                    <a href="../build" class="apple-button-c">Create Your Toy</a>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/FlyingDinousary.png" alt="Second slide">
                <div id="image-overlay">
                    <p id="main-title-c">View Creations</p>
                    <p id="sub-title-c"> Experience the Magic: Your Creations, Your Universe.</p>
                    <a href="../MyCreations" class="apple-button">Your Creations</a>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/TeddyBear.jpg" alt="Third slide">
                <div id="image-overlay">
                    <p id="main-title-c">Order Creations</p>
                    <p id="sub-title-c"> Discover Your Cart: Where Dreams Turn into Delight.</p>
                    <a href="../cart" class="apple-button">View your Cart</a>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<div id="video-container">
    <video id="video-background" autoplay muted loop>
        <source src="/Videos/Shop-Video.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div id="video-overlay">
        <p id="main-title">Wonder awaits</p>
        <p id="sub-title"> Check Out Our Cool Products</p>
        <a href="../shop" class="apple-button">Shop</a>
